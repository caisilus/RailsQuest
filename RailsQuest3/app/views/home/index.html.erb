<div class='battlefield'>
  <div class='team_container left'>
    <%- @team1.each do |character| %>
      <div>
        <%= image_tag character.unit%>
      </div>
    <% end %>
  </div>
  <div class='team_container right'>
    <%- @team2.each do |character| %>
      <div>
        <%= image_tag character.unit%>
      </div>
    <% end %>
  </div>
</div>

<div class='controls'>
  <div class='controls_container'>
    <%= button_to 'Add Knight', new_character_path, params:{character: {team: 1, unit: 'knight'}}, method: :post %>
  </div>
  <div class='controls_container'>
    <%= button_to 'Add Mage', new_character_path, params:{character: {team: 1, unit: 'mage'}}, method: :post %>
  </div>

  <div class='controls_container'>
    <%= button_to 'Ulta1', ulta1_activate_path, method: :post, class: @is_ulta1_allow ? 'button--normal' : 'button--dimmed'%>
  </div>

  <div class='controls_container'>
    <%= button_to 'Add Medusa', new_character_path, params:{character: {team: 2, unit: 'medusa'}}, method: :post %>
  </div>
  <div class='controls_container'>
    <%= button_to 'Add Jinn', new_character_path, params:{character: {team: 2, unit: 'jinn'}}, method: :post %>
  </div>
  <div class='controls_container'>
    <%= button_to 'Ulta2', ulta2_activate_path, method: :post, class: @is_ulta2_allow ? 'button--normal' : 'button--dimmed'%>
  </div>
</div>

<div class='controls'>
  <div class='controls_container'>
    <%= button_to 'Restart', restart_path, method: :post,style: 'margin-top: 20px;' %>
  </div>

  <div class='controls_container'>
    <%= button_to 'Generate random game', generate_game_path,
                  method: :post,style: 'margin-top: 20px;',
                  class: @is_generate_allow ? 'button--normal' : 'button--dimmed'%>
  </div>
</div>